<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewContenedor"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="@dimen/activity_horizontal_margin">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/imageManzanaCarview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/cebolla_huevo_roja"
                />

        <TextView
                android:id="@+id/txtViewDescripcionCarview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modelocarview_interfaz_principal_descripcion"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:textSize="26dp"
                android:textStyle="bold"/>
    </LinearLayout>

</android.support.v7.widget.CardView>