<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".editarFormularios.EditarCompraActivity">


    <ScrollView

            android:id="@+id/scrollRegistroCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/relatiLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txtTituloFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Registro  de Frutas o Verduras"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <Spinner
                    android:id="@+id/spinnerOpcionEC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="90dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>
            <Spinner
                    android:id="@+id/spinnerListaEC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:scrollbarSize="30dp"
                    android:layout_marginTop="140dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>
            <EditText
                    android:id="@+id/ediTxtPrecioLibraEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaEC"
                    android:layout_marginTop="10dp"
                    android:hint="Precio Kilo"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtLibrasEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtPrecioLibraEC"
                    android:hint="Kilos"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtBultosEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasEC"
                    android:hint="Bultos"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"/>
            <Spinner
                    android:id="@+id/spinnerProcedenciaEC"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/ediTxtBultosEC"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/linearFecha"
                    android:layout_below="@+id/spinnerProcedenciaEC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/ediTxtFechaRegistroEC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Fecha Registro"
                        android:textSize="20dp"
                        android:layout_below="@+id/spinnerProcedenciaEC"
                        android:layout_marginLeft="25dp"
                        android:inputType="date"
                        android:layout_gravity="center_vertical"/>

                <Button
                        android:id="@+id/btnFechaFS"
                        android:text="Seleccione Fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/molde_btn_varios_background"/>


            </LinearLayout>
            <Button
                    android:id="@+id/btnEditarRegistroEC"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_below="@+id/linearFecha"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="30dp"
                    android:text="Registrar"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnCancelarRegistroEC"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_below="@+id/linearFecha"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="50dp"
                    android:text="Cancelar"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:background="@drawable/molde_btn_varios_background"/>
            <Button
                    android:id="@+id/btnEliminarRegistroEC"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:text="Eliminar"
                    android:background="@drawable/molde_btn_varios_background"
                    android:layout_marginTop="550dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>