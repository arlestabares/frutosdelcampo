<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="@dimen/activity_horizontal_margin">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/txtViewNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:id="@+id/txtViewPrecioXLibra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio Kilo $"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"/>
            <TextView
                    android:id="@+id/txtViewLibras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kilos:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"/>
            <TextView
                    android:id="@+id/txtViewBultos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bultos:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"/>

            <TextView
                    android:id="@+id/txtViewProcedencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Procedencia:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"/>
            <TextView
                    android:id="@+id/txtViewNombreFundacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha Registro:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginTop="0dp"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/txtPrecioLibras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio "
                    android:textSize="17dp"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/txtLibras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kilos"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:id="@+id/txtBultos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bultos"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"/>

            <TextView
                    android:id="@+id/txtProcedencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Procedencia"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"/>
            <TextView
                    android:id="@+id/txtNombreFundacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Registro"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
