<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activitiesFormularios.FormularioStockActivity">

    <ScrollView

        android:id="@+id/scrollRegistroCompra"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ingresar Stock de Fruta o Verdura"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerOpcionFS"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="60dp"
                android:padding="8dp" />


            <Spinner
                android:id="@+id/spinnerListaFS"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:padding="8dp" />


            <EditText
                android:id="@+id/ediTxtLibrasFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinnerListaFS"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:digits="0123456789"
                android:hint="Kilos"
                android:inputType="number"
                android:maxLength="9" />

            <EditText
                android:id="@+id/ediTxtBultosFS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ediTxtLibrasFS"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:digits="0123456789"
                android:hint="Bultos"
                android:inputType="number"
                android:maxLength="5" />

            <LinearLayout
                android:id="@+id/linearFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ediTxtBultosFS"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewFechaRegistroFS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtBultosFS"
                    android:layout_marginLeft="20dp"
                    android:hint="Fecha Registro"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btnFechaFS"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="85dp"

                    android:background="@drawable/molde_btn_varios_background"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Seleccione" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearBotones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
              android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRegistrarFS"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/molde_btn_varios_background"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Registrar" />

                <Button
                    android:id="@+id/btnCancelarFS"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/molde_btn_varios_background"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:text="Cancelar" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>