                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    android:id="@+id/cardViewRC"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="3dp"
                    android:elevation="10dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="@dimen/activity_horizontal_margin">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/imageManzanaCarview1"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:src="@drawable/cebolla_huevo_roja"/>

                    <TextView
                            android:id="@+id/txtViewRC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/registrarCFV"
                            android:gravity="center"
                            android:textSize="26dp"
                            android:textStyle="bold"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/cardViewLRC"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
