<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activitiesFormularios.FormularioStockActivity">

    <ScrollView

            android:id="@+id/scrollRegistroCompra"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txtTituloFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresar Stock de Fruta o Verdura"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <Spinner
                    android:id="@+id/spinnerOpcionFS"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="60dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp"/>


            <Spinner
                    android:id="@+id/spinnerListaFS"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginRight="60dp"
                    android:padding="8dp"/>


            <EditText
                    android:id="@+id/ediTxtLibrasFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaFS"
                    android:inputType="number"
                    android:hint="Libras"
                    android:layout_marginLeft="20dp"/>
            <EditText
                    android:id="@+id/ediTxtBultosFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasFS"
                    android:layout_marginTop="1dp"
                    android:inputType="number"
                    android:hint="Bultos"
                    android:layout_marginLeft="20dp"/>

            <LinearLayout
                    android:id="@+id/linearFecha"
                    android:layout_below="@+id/ediTxtBultosFS"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/textViewFechaRegistroFS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ediTxtBultosFS"
                        android:hint="Fecha de Registro"
                        android:layout_marginLeft="20dp"/>

                <Button
                        android:id="@+id/btnFechaFS"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Seleccione Fecha"
                        android:layout_marginLeft="245dp"
                        android:background="@drawable/molde_btn_varios_background"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/linearBotones"
                    android:layout_below="@+id/linearFecha"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">
                <Button
                        android:id="@+id/btnRegistrarFS"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Registrar"
                        android:layout_marginLeft="70dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:paddingVertical="2dp"
                        android:background="@drawable/molde_btn_varios_background"/>
                <Button
                        android:id="@+id/btnCancelarFS"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Cancelar"
                        android:layout_marginLeft="215dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/molde_btn_varios_background"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>