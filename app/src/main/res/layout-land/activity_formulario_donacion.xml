<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activitiesFormularios.FormularioBancoDonacionActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/txtTituloFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingresar Fruta o Verdura en Descomposion"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>
            <Spinner
                    android:id="@+id/spinnerOpcionFD"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="60dp"
                    android:padding="8dp"/>
            <Spinner
                    android:id="@+id/spinnerListaFD"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/spinnerOpcionFD"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:layout_marginRight="60dp">

            </Spinner>
            <EditText
                    android:id="@+id/ediTxtLibrasFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaFD"
                    android:inputType="number"
                    android:hint="Libras"
                    android:layout_marginLeft="20dp"/>

            <EditText
                    android:id="@+id/ediTxtBultosFD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasFD"
                    android:layout_marginTop="1dp"
                    android:inputType="number"
                    android:hint="Bultos"
                    android:layout_marginLeft="20dp"/>

            <LinearLayout
                    android:id="@+id/linearFecha"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ediTxtBultosFD"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/txtViewFechaRegistroFD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ediTxtBultosFD"
                        android:inputType="text"
                        android:hint="Fecha de Registro"
                        android:layout_marginLeft="20dp"/>

                <Button
                        android:id="@+id/btnFechaFS"
                        android:text="Seleccione Fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="255dp"
                        android:background="@drawable/molde_btn_varios_background"/>
            </LinearLayout>

            <LinearLayout

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">
                <Button
                        android:id="@+id/btnRegistrarFD"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Registrar"
                        android:layout_marginLeft="70dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="@drawable/molde_btn_varios_background"/>
                <Button
                        android:id="@+id/btnCancelarFD"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="225dp"
                        android:text="Cancelar"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/molde_btn_varios_background"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>