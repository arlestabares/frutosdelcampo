<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editarFormularios.EditarDonacionActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/txtTituloFS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Editar Fruta o Verdura en Descomposion"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            <Spinner
                    android:id="@+id/spinnerOpcionED"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="60dp"
                    android:padding="8dp">

            </Spinner>

            <Spinner
                    android:id="@+id/spinnerListaED"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/spinnerOpcionED"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    android:padding="8dp">

            </Spinner>


            <EditText
                    android:id="@+id/ediTxtLibrasED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinnerListaED"
                    android:layout_marginTop="10dp"
                    android:hint="Libras"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"/>

            <EditText
                    android:id="@+id/ediTxtBultosED"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ediTxtLibrasED"
                    android:layout_marginTop="1dp"
                    android:hint="Bultos"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"/>

            <LinearLayout
                    android:id="@+id/linearFecha"
                    android:orientation="horizontal"
                    android:layout_below="@+id/ediTxtBultosED"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <EditText
                        android:id="@+id/txtViewFechaRegistroED"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ediTxtBultosED"
                        android:hint="Fecha de Registro"
                        android:layout_marginLeft="20dp"/>

                <Button
                        android:id="@+id/btnFechaFS"
                        android:text="Seleccione Fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="243dp"
                        android:background="@drawable/molde_btn_varios_background"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">
                <Button
                        android:id="@+id/btnEditarED"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Registrar"
                        android:layout_marginLeft="70dp"
                        android:paddingRight="30dp"
                        android:paddingLeft="30dp"
                        android:background="@drawable/molde_btn_varios_background"/>
                <Button
                        android:id="@+id/btnCancelarED"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Cancelar"
                        android:layout_marginLeft="210dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:background="@drawable/molde_btn_varios_background"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>